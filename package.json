{
  "name": "@system76/asset-components",
  "version": "0.0.0-development",
  "description": "System76 image asset url helpers and Vue components",
  "author": "System76 <hosting@system76.com> (https://system76.com)",
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "source": "src/index.js",
  "scripts": {
    "start": "start-storybook",
    "build": "npm run build:library && npm run build:storybook",
    "build:library": "NODE_ENV=production tsc",
    "build:storybook": "build-storybook -o docs",
    "test": "ava",
    "commit": "git-cz",
    "release": "semantic-release"
  },
  "homepage": "https://asset-components.origin76.com/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/system76/asset-components.git"
  },
  "bugs": {
    "url": "https://github.com/system76/asset-components/issues"
  },
  "keywords": [
    "assets",
    "components",
    "frontend",
    "system76",
    "vue"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.8.4",
    "@storybook/addon-actions": "^5.3.14",
    "@storybook/addon-centered": "^5.3.14",
    "@storybook/addon-knobs": "^5.3.14",
    "@storybook/addons": "^5.3.14",
    "@storybook/vue": "^5.3.14",
    "@system76/design": "^5.1.0",
    "@vue/test-utils": "^1.0.0-beta.31",
    "ava": "^3.4.0",
    "babel-loader": "^8.0.6",
    "babel-preset-vue": "^2.0.2",
    "browser-env": "^3.3.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.1.0",
    "esm": "^3.2.25",
    "semantic-release": "^17.0.4",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2",
    "vue": "^2.6.11",
    "vue-loader": "^15.9.0",
    "vue-template-compiler": "^2.6.11"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "test/spec/**/*.ts"
    ],
    "require": [
      "esm",
      "ts-node/register/transpile-only",
      "./test/_browser.ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
